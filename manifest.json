{
  "manifest_version": 3,
  "name": "HGF Helper",
  "version": "1.0.6",
  "description": "HGF Helper (dev)",

  "content_scripts": [
    {
      "js": ["dist/farm.js", "dist/farmBootstrap.js"],
      "css": ["dist/style.css"],
      "matches": ["https://www.twitch.tv/hitsquadgodfather"],
      "run_at": "document_idle",
      "all_frames": true
    }


  ],

  "web_accessible_resources": [
    {
      "resources": [
        "dist/farm.js",
        "dist/farmBootstrap.js",
        "dist/farmInjected.js",
        "dist/style.css"
      ],
      "matches": ["https://www.twitch.tv/*"]
    }
  ],

  "host_permissions": ["https://*/*"],

  "permissions": [
    "storage"
  ],

  "action": {
    "default_popup": "./popup.html"
  },

  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}

{
  "manifest_version": 3,
  "name": "HGF Helper",
  "version": "1.0.2",
  "description": "HGF Helper",

  "content_scripts": [
    {
      "js": ["dist/twitchFarmBootstrap.js"],
      "matches": ["https://www.twitch.tv/hitsquadgodfather"],
      "run_at": "document_idle",
      "all_frames": true
    },

    {
      "js": ["dist/youtubeFarmBootstrap.js"],
      "matches": ["https://www.youtube.com/watch?v=0kcpL4AI0BY&ab_channel=HitsquadGodfather"],
      "run_at": "document_idle",
      "all_frames": false
    },

    {
      "js": ["dist/store.js"],
      "css": ["dist/store.css"],
      "matches": ["https://streamelements.com/hitsquadgodfather/store"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["dist/twitchFarmBootstrap.js", "dist/twitchFarm.js", "dist/twitchFarm.css"],
      "matches": ["https://www.twitch.tv/*"]
    },

    {
      "resources": ["dist/youtubeFarmBootstrap.js", "dist/youtubeFarm.js", "dist/youtubeFarm.css"],
      "matches": ["https://www.youtube.com/*"]
    },

    {
      "resources": ["dist/store.js", "dist/store.css"],
      "matches": ["https://streamelements.com/*"]
    }
  ]
}

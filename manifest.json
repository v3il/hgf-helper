{
  "manifest_version": 3,
  "name": "HGF Helper",
  "version": "1.0.3",
  "description": "HGF Helper",

  "content_scripts": [
    {
      "js": ["dist/farm.js", "dist/farmBootstrap.js"],
      "css": ["dist/farm.css"],
      "matches": ["https://www.twitch.tv/hitsquadgodfather"],
      "run_at": "document_idle",
      "all_frames": true
    },

    {
      "js": ["dist/store.js"],
      "css": ["dist/store.css"],
      "matches": ["https://streamelements.com/hitsquadgodfather/store"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "dist/farm.js",
        "dist/farmBootstrap.js",
        "dist/farmInjected.js",
        "dist/farm.css"
      ],
      "matches": ["https://www.twitch.tv/*"]
    },

    {
      "resources": [
        "dist/store.js",
        "dist/store.css"
      ],
      "matches": ["https://streamelements.com/*"]
    }
  ],

  "host_permissions": ["https://*/*"],

  "permissions": [
    "storage"
  ],

  "action": {
    "default_popup": "./popup.html"
  },

  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
